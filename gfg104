class Solution:
    def sumMatrix(self, n, q):
        # code here 
        
        mid = n+1
        
        if  q in range(2, 2*n+1):
            if q == mid  :
                return n
            elif q < mid :
                return (q-1 )
            else:  
                return (2*n - q +1 )
        else : return 0 
